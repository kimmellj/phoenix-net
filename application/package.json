{
  "name": "phoenix-net-api",
  "version": "0.0.0",
  "main": "src",
  "private": true,
  "scripts": {
    "start": "node .",
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "dev": "nodemon -i \"*.test.js\" .",
    "lint": "eslint src",
    "docs": "apidoc -i src -o docs && apidoc-markdown2 -p docs -o DOCS.md",
    "postdocs": "opn docs/index.html"
  },
  "apps": [
    {
      "name": "Phoenix-API",
      "script": "src/index.js",
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "jamie",
      "host": [
        "d-vault.local"
      ],
      "ref": "origin/develop",
      "ssh_options": "ForwardAgent=yes",
      "repo": "git@bitbucket.org:kimmellj/phoenix-net.git",
      "path": "/Users/jamie/phoenix-api",
      "post-deploy": "cd application/; npm install; npm run prod",
      "env": {
        "NODE_ENV": "production",
        "PATH": "/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin/"
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "apidoc-markdown2": "^0.3.7",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^20.0.3",
    "cross-env": "^5.0.5",
    "eslint": "^4.4.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest-cli": "^20.0.4",
    "mockgoose": "^6.0.8",
    "nock": "^9.0.2",
    "node-fetch": "^2.1.2",
    "nodemon": "^1.10.2",
    "opn-cli": "^3.1.0",
    "sinon": "^4.0.1",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bodymen": "^1.0.3",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-force-ssl": "^0.3.2",
    "dotenv-safe": "^4.0.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^4.12.4",
    "mongoose-create-unique": "^0.4.4",
    "mongoose-keywords": "^0.3.2",
    "morgan": "^1.7.0",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^3.0.0",
    "querymen": "^2.1.3",
    "rand-token": "^0.4.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "sendgrid": "^4.0.2"
  }
}
