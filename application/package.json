{
  "name": "phoenix-net-api",
  "version": "0.0.0",
  "main": "src",
  "private": true,
  "scripts": {
    "start": "node .",
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "dev": "nodemon -i \"*.test.js\" .",
    "lint": "eslint src",
    "docs": "apidoc -i src -o docs && apidoc-markdown2 -p docs -o DOCS.md",
    "postdocs": "opn docs/index.html"
  },
  "apps": [
    {
      "name": "Phoenix-API",
      "script": "src/index.js",
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "jamie",
      "host": [
        "d-vault.local"
      ],
      "ref": "origin/develop",
      "ssh_options": "ForwardAgent=yes",
      "repo": "git@bitbucket.org:kimmellj/phoenix-net.git",
      "path": "/Users/jamie/phoenix-api",
      "post-deploy": "cd application/; npm install; npm run prod",
      "env": {
        "NODE_ENV": "production",
        "PATH": "/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin/"
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "apidoc-markdown2": "^0.3.7",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "cross-env": "^5.2.0",
    "dotenv-safe": "^6.1.0",
    "eslint": "^5.7.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest-cli": "^23.6.0",
    "mockgoose": "^7.3.5",
    "nock": "^10.0.1",
    "node-fetch": "^2.2.0",
    "nodemon": "^1.18.4",
    "opn-cli": "^3.1.0",
    "sinon": "^6.3.5",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^3.0.1",
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "bodymen": "^1.1.0",
    "compression": "^1.7.3",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "express-force-ssl": "^0.3.2",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.3",
    "mongoose-create-unique": "^0.4.4",
    "mongoose-keywords": "^0.4.0",
    "morgan": "^1.9.1",
    "npm": "^6.4.1",
    "npm-check-updates": "^2.14.2",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "querymen": "^2.1.3",
    "rand-token": "^0.4.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "sendgrid": "^5.2.3"
  }
}
